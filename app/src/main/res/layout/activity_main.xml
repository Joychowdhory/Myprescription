<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textviewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Your Medicine"
        android:textSize="23dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:paddingLeft="25dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingTop="25dp"
        >

        <Button
            android:id="@+id/morningbuttonID"
            android:layout_width="235dp"
            android:layout_height="100dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:background="#4169E1"
            android:drawableTop="@drawable/morning"
            android:text="MORNING"


            />

        <Button
            android:id="@+id/noonbuttonID"
            android:layout_width="235dp"
            android:layout_height="100dp"
            android:text="NOON"
            android:drawableTop="@drawable/noon"
            android:layout_marginLeft="70dp"
            android:background="#4169E1"

            />

        <Button
            android:id="@+id/nightbuttonID"
            android:layout_width="235dp"
            android:layout_height="100dp"
            android:text="NIGHT"
            android:drawableTop="@drawable/night"
            android:layout_marginLeft="70dp"
            android:background="#4169E1"

            />


    </LinearLayout>


</LinearLayout>