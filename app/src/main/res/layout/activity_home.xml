<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:id="@+id/drawer"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        >



        <Button
            android:id="@+id/medicinebuttonID"
            android:layout_width="133dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="#4169E1"
            android:drawableBottom="@drawable/medicine"
            android:text="MEDICINE"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/appointbuttonID"
            android:layout_width="133dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:background="#4169E1"
            android:drawableBottom="@drawable/appointment"
            android:text="APOINTMENT"

            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/alarmbuttonID"
            android:layout_width="133dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="190dp"
            android:background="#4169E1"
            android:drawableBottom="@drawable/alarm"
            android:text="Set alarm"

            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/hospitalID"
            android:layout_width="133dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="190dp"
            android:background="#4169E1"
            android:drawableBottom="@drawable/hospital2"
            android:text="Hospital"

            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/symptommbuttonID"
            android:layout_width="133dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="350dp"
            android:background="#4169E1"
            android:drawableBottom="@drawable/symptom"
            android:text="SympTom"

            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/buttonID"
            android:layout_width="133dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="350dp"
            android:background="#4169E1"
            android:drawableBottom="@drawable/hospital"
            android:text="Nope"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawermenu"
        android:layout_width="match_parent"
        android:layout_height="500dp"

        app:itemTextColor="#000"
        app:itemIconTint="#000"
        android:layout_gravity="start"
        >

    </android.support.design.widget.NavigationView>



    </android.support.v4.widget.DrawerLayout>



